<h2>Create a Movie</h2>
<form method="POST" action="/movies/create">
    <div class="form1">
        <label for="title">Title:</label>
        <input type="text" class="forminput" id="title" name="title">
    </div>
    <div class="form1">
        <label for="genre">Genre:</label>
        <input type="text" class="forminput" id="genre" name="genre">
    </div>
    <div class="form1">
        <label for="plot">Plot:</label>
        <input type="text" class="forminput" id="plot" name="plot">
    </div>
    <div> Cast:<br>
        {{#each celebrities}}
            <label for="{{name}}">{{name}}</label>
            <input type="checkbox" name="cast" value="{{_id}}" id="{{name}}"/>
            <br/>
        {{/each}}
    </div>
    <button type="submit" class="btnform">Submit</button>
</form>